<!--==========================
  Formulario
  ============================-->

<section id="about">
  <div class="container wow fadeInUp">
    <div class="row">
      <div class="col-md-12">

        <section id="portfolio">
          <div class="container wow fadeInUp">
            <div class="row">
              <div class="col-md-12">
                <h3 class="section-title">Visualización De Inmuebles </h3>
                <br>
                <center>
                  <a href="/users/crear" class="button button-secondary button-pipaluk" type="button">Registra Tú Inmueble Ahora</a>
                </center>
                <div class="section-title-divider"></div>
                <p class="section-description"></p>
              </div>
            </div>


            <div class="row">
              <%let num=Math.round(DATOSinmueblesCD.length/2)  %>
              <% for( let i=0; i< DATOSinmueblesCD.length; i++ ) { %>
              <div class="col-md-3">
                <a class="portfolio-item" style="background-image: url('/images/<%=DATOSinmueblesCD[i].img %>');">
                  <div class="details" style="color:rgb(5, 5, 5);">
                    <br>
                    <b>Municipio:<%=DATOSinmueblesCD[i].municipio%>
                    </b>
                    <br>
                    <td>Número de registro:<%=DATOSinmueblesCD[i].id%>
                    </td>
                    <br>
                    <td>Precio mensual:$<%=DATOSinmueblesCD[i].precio%>
                    </td>
                    <br>
                    <td>Dimenciones:<%=DATOSinmueblesCD[i].dimenciones%>m²
                    </td>
                    <br>
                    <td>Descripción:<%=DATOSinmueblesCD[i].descripcion_general%>
                    </td>
                    <br>

                     <!--==========================
                      BUTTON EDTITAR 
                      ============================-->
                    <div class="btn-group-vertical" role="group" aria-label="Vertical button group">
                      <form class="form-inline" method="get" action="/users/crear">
                        <button class="meInteresa" type="submit"><img src="../img/corazon.png" alt=""> </button>
                      </form>
                    </div>
                    <!--==========================
                    BUTTON BORRAR 
                    ============================
                    <div class="btn-group-vertical" role="group" aria-label="Vertical button group">
                      <form class="form-inline" method="post" action="/users/crear">
                        <button class="btn btn-warning" type="submit"><img src="" alt=""></button>
                      </form>
                    </div>-->

                    

                  </div>

                </a>
              </div>

              <% } %>
            </div>
          </div>
        </section>


      </div>
    </div>
  </div>
</section>

