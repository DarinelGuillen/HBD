              <form class="form-inline" method="post" action="/casas/eliminar/<%=dbInmuebles[i].id%>">
                <button class="btn btn-warning" type="submit">Borrar</button>
              </form>
            </div>


          </div>

        </a>
      </div>
      <% } %>

