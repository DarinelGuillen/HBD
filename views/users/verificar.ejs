            <td>Precio mensual:$<%=dbInmuebles[i].precio%>
            </td>
            <br>
            <td>Dimenciones:<%=dbInmuebles[i].dimenciones%>m²
            </td>
            <br>
            <td>Disponibilidad:<%= dbInmuebles[i].disponible1_No0 %>
            </td>
            <br>
              <!--==========================
            BUTTON EDTITAR 
            ============================-->
            <div class="btn-group-vertical" role="group" aria-label="Vertical button group">
