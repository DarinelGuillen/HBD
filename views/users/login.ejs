                                let contrasena=document.getElementById('contrasena').value+'';

                                $.ajax({
                                    type: "POST",
                                    url: 'http://localhost:3000/users/verificar/'+co+','+contrasena,
                                    headers: {'Authorization': 'Bearer xxxxxxxxxxxxx'},
                                    data: $(this).serialize(),
                                    success: function(response)
                                    {
                                     const ruta = JSON.parse(response);
                                      console.log(ruta);
                                      window.location.href = ruta.redirect;
                                   },
                                   error:function(error){
                                    console.log(e.message);
                                   }
                               });
                             });
                        });
                    </script>
